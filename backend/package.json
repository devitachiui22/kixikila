{
  "name": "kixikilahub-backend",
  "version": "1.0.0",
  "description": "Backend da plataforma KixikilaHub - Fintech Social para Angola",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:setup": "node scripts/setupDatabase.js",
    "db:seed": "node scripts/setupDatabase.js --seed",
    "db:reset": "node scripts/resetDatabase.js",
    "db:backup": "node scripts/backupDatabase.js",
    "audit": "npm audit",
    "security:check": "npx snyk test",
    "cron:run": "node scripts/runCron.js",
    "logs:tail": "tail -f logs/combined.log"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "KixikilaHub Engineering Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "express": "4.18.3",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "dotenv": "16.4.5",
    "jsonwebtoken": "9.0.2",
    "bcrypt": "5.1.1",
    "joi": "17.12.2",
    "pg": "8.11.3",
    "socket.io": "4.7.4",
    "socket.io-client": "4.7.4",
    "express-rate-limit": "7.1.5",
    "winston": "3.11.0",
    "winston-daily-rotate-file": "4.7.1",
    "uuid": "9.0.1",
    "moment": "2.30.1",
    "axios": "1.6.7",
    "express-async-errors": "3.1.1",
    "compression": "1.7.4",
    "express-validator": "7.0.1",
    "cookie-parser": "1.4.6",
    "csrf": "3.1.0",
    "express-mongo-sanitize": "2.2.0",
    "xss-clean": "0.1.4",
    "hpp": "0.2.3",
    "useragent": "2.3.0",
    "ip": "2.0.1",
    "node-cron": "3.0.3",
    "nodemailer": "6.9.9",
    "bull": "4.12.2",
    "ioredis": "5.3.2",
    "multer": "1.4.5-lts.1",
    "sharp": "0.33.2",
    "crypto": "1.0.1",
    "rate-limit-redis": "4.1.0"
  },
  "devDependencies": {
    "nodemon": "3.1.0",
    "jest": "29.7.0",
    "supertest": "6.3.4",
    "@types/jest": "29.5.12",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-security": "2.1.1",
    "prettier": "3.2.5",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "snyk": "1.1286.0",
    "dotenv-cli": "7.4.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/database/schema.sql"
    ]
  },
  "keywords": [
    "fintech",
    "kixikila",
    "angola",
    "poupanca",
    "grupos",
    "backend",
    "nodejs",
    "express",
    "postgresql"
  ]
}